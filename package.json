{
  "name": "@timdp/depviz",
  "description": "Visualizes intra-monorepo dependencies.",
  "version": "0.0.5",
  "bin": {
    "depviz": "depviz.js"
  },
  "files": [
    "depviz.js"
  ],
  "scripts": {
    "test": "yarn run lint",
    "lint": "standard '**/*.js'",
    "format": "prettier-standard '**/*.js' && standard --fix '**/*.js'"
  },
  "dependencies": {
    "acorn": "^6.1.1",
    "bottleneck": "^2.18.1",
    "console-stamp": "^0.2.7",
    "estree-walker": "^0.6.0",
    "globby": "^9.2.0",
    "hard-rejection": "^2.1.0",
    "lcp": "^1.1.0",
    "lodash": "^4.17.11",
    "mem": "^5.0.0",
    "read-pkg": "^5.1.1",
    "read-pkg-up": "^6.0.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "standard --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
