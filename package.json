{
  "name": "@timdp/depviz",
  "description": "Visualizes intra-monorepo dependencies.",
  "version": "0.4.1",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "depviz": "depviz.js"
  },
  "files": [
    "depviz.js"
  ],
  "scripts": {
    "test": "eslint \"**/*.js\"",
    "format": "prettier-eslint --write \"$PWD/**/*.js\"",
    "prepare": "husky install",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "acorn": "^8.0.1",
    "acorn-jsx": "^5.3.2",
    "console-stamp": "^3.0.6",
    "estree-walker": "^3.0.1",
    "globby": "^13.1.2",
    "hard-rejection": "^2.1.0",
    "lcp": "^1.1.0",
    "lodash-es": "^4.17.21",
    "mem": "^9.0.2",
    "read-pkg": "^7.1.0",
    "read-pkg-up": "^9.1.0",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "eslint": "^8.18.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "prettier-eslint-cli": "^7.0.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write"
    ]
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/timdp"
  }
}
